{
    "layer": "top",
    "position": "left",
    "modules-left": ["hyprland/workspaces"],
    "modules-center": ["mpd"],
    "modules-right": [
        "privacy",
        "cpu",
        "temperature",
        "custom/gpu_load",
        "custom/gpu_temp",
        "memory",
        "disk",
        "pulseaudio",
        "backlight",
        "battery",
        "network",
        "hyprland/language",
        "custom/weather",
        "clock",
        "custom/power",
    ],
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "1": "一",
            "2": "二",
            "3": "三",
            "4": "四",
            "5": "五",
            "6": "六",
            "7": "七",
            "8": "八",
            "9": "九",
            "default": "󰻃",
        },
        "persistent-workspaces": {
            "*": [1, 2, 3, 4, 5, 6, 7, 8, 9],
        },
        "actions": {
            "on-click": "",
            "on-click-left": "",
            "on-click-right": "",
        }
    },
    "mpd": {
        "format": "{stateIcon} {consumeIcon}{randomIcon}{repeatIcon}{singleIcon} {artist} - {title} ({elapsedTime:%M:%S}/{totalTime:%M:%S})",
        "format-disconnected": "MPD disconnected",
        "format-stopped": "{consumeIcon}{randomIcon}{repeatIcon}{singleIcon}MPD stopped",
        "tooltip-format": "{album} - {artist} - {title} {elapsedTime:%M:%S}/{totalTime:%M:%S} {songPosition}/{queueLength}",
        "max-length": 70,
        "on-click": "mpc toggle",
        "rotate": 90,
        "state-icons": {
            "paused": "󰏤",
            "playing": "󰐊",
        },
        "consume-icons": {
            "on": "󰆐",
        },
        "random-icons": {
            "on": "󰒟",
        },
        "repeat-icons": {
            "on": "󰑖",
        },
        "single-icons": {
            "on": "󰑘",
        },
    },
    "privacy": {
        "icon-size": 14,
        "modules": [
            {
                "type": "screenshare",
            },
            {
                "type": "audio-out",
            },
            {
                "type": "audio-in",
            },
        ],
    },
    "cpu": {
        "interval": 2,
        "format": "󰻠 {usage}",
    },
    "temperature": {
        "interval": 5,
        "thermal-zone": 3,
        // "hwmon-path": "",
        "critical-threshold": 60,
        // "format-critical": "{temperatureC}°C ",
        "format": "{temperatureC}°C",
        "tooltip": false,
    },
    "custom/gpu_load": {
        "exec": "~/bin/misc/gpu-load.sh NVIDIA",
        "format": "󰢮 {}",
        "interval": 2,
        "tooltip": false,
    },
    "custom/gpu_temp": {
        "exec": "nvidia-settings -q gpucoretemp -t",
        "format": "{}°C",
        "interval": 5,
        "tooltip": false,
    },
    "memory": {
        "interval": 2,
        "format": " {}",
    },
    "disk": {
        "interval": 360,
        "format": "󰋊 {specific_free:0.0f}",
        "unit": "GiB",
        "path": "/",
    },
    "pulseaudio": {
        "format": "{icon} {volume}",
        "format-bluetooth": "{icon} {volume}",
        "format-muted": "󰖁",
        "format-icons": {
            "default": ["󰕿", "󰖀", "󰕾"],
        },
        "scroll-step": 5,
        "on-click": "pamixer -t",
        "ignored-sinks": ["Easy Effects Sink"],
    },
    "backlight": {
        // "device": "intel_backlight",
        "format": "{icon} {percent}",
        "format-icons": ["󰃜", "󰃠"],
    },
    "battery": {
        "interval": 60,
        "states": {
            "warning": 30,
            "critical": 15,
        },
        "format": "{icon} {capacity}",
        "format-icons": ["", "", "", "", ""],
        "max-length": 25,
    },
    "network": {
        // "interface": "",
        "interval": 1,
        "format": "{ifname}",
        "format-wifi": "{essid} ({signalStrength}%) ",
        "format-ethernet": "󰈀",
        "format-disconnected": "󰤮",
        "tooltip-format": "{ifname} via {gwaddr} 󰊗",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) ",
        "tooltip-format-ethernet": "{ifname}\n{ipaddr}\n{bandwidthUpBytes}\n󰯎\n{bandwidthDownBytes}",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
    },
    "hyprland/language": {
        "format": "{}",
        "format-en": "EN",
        "format-ru": "RU",
    },
    "custom/weather":{
        "exec": "~/bin/misc/weather.sh",
        "interval": 7200,
        "format": "{}",
    },
    "clock": {
        "format": "{:%m/%d\n %a\n%H:%M}",
        "interval": 60,
        "tooltip-format": "<tt><small>{calendar}</small></tt>",
        "calendar": {
            "mode": "year",
            "mode-mon-col": 3,
            "weeks-pos": "right",
            "on-scroll": 1,
            "format": {
                "months": "<span color='#cba6f7'><b>{}</b></span>",
                "weeks": "<span color='#fab387'><b>W{:%W}</b></span>",
                "weekdays": "<span color='#fab387'><b>{}</b></span>",
                "days": "<span color='#cdd6f4'><b>{}</b></span>",
                "today": "<span color='#f38ba8'><b><u>{}</u></b></span>",
            },
        },
    },
    "custom/power":{
        "format": "󰤁",
        "on-click": "~/bin/misc/power.sh",
        "tooltip": false,
    },
}
