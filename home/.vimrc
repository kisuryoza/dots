set nocompatible
set autoread
set hlsearch
set ruler
set laststatus=2
set encoding=utf-8
set noswapfile
set cursorline
set history=100
set linebreak

set autoindent
set expandtab
set shiftwidth=4
set softtabstop=4
set smartindent
set number relativenumber

set ignorecase
set smartcase


" gvim
set guioptions-=m  "menu bar
set guioptions-=T  "toolbar
set guioptions-=r  "scrollbar

colorscheme habamax

filetype plugin on
syntax enable

nnoremap <silent> <esc> :noh<cr><esc>
